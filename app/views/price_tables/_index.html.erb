<table class="table table-list">
    <thead>
      <tr>
        <th>カテゴリー</th>
        <th>商品名</th>
        <th>仕様</th>
        <th>単位</th>
        <th>単価</th>
        <th>備考</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @price_tables.each do |pt|%>
        <tr>
          <td><%= pt.category.category_name %></td>
          <td><%= pt.item_name %></td>
          <td><%= pt.specification %></td>
          <td><%= pt.unit %></td>
          <td><%= pt.unit_price %></td>
          <td><%= pt.remark %></td>
        </tr>
      <% end %>
    </tbody>
  </table>