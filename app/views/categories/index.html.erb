<%#= form_for(@categories, url: categories_path, method: :post) do |f| %>
<% if false %>
<%= form_tag categories_path, method: "put" do %>
   <table class="table table-list">
    <thead>
      <tr>
        <th>カテゴリー</th>
      </tr>
    </thead>

    <tbody id='detail-association-insertion-point'>

    <div class="form-group">
    <% @categories.each do |category| %>
      <%= fields_for "categories[]", category do |fi| %>
        <%= fi.text_field :category_name, class: 'form-control mt-2' %>
      <% end %>
    <% end %>
    </div>
    </tbody>
  </table>

  <%= submit_tag '登録', class: 'btn btn-primary' %>
<% end %>
<% end %>


<% @categories.each do |category|%>
  <%= form_for(category, url: category_path(category), method: :put) do |f| %>
    <div class="form-row">
      <div class="form-group col-4">
        <%= f.text_field :category_name, class: 'form-control'%>
      </div>
      <div class="form-group col-1">
        <%= f.submit '更新',  class: 'btn btn-primary btn-block' %>
      </div>
      <div class="form-group col-1">
        <%= link_to '削除', category_path(category), method: :delete, class: 'btn btn-secondary btn-block' %>
      </div>
    </div>
  <% end %>
<% end %>



<%= form_for(@category, url: categories_path, method: :post) do |f| %>
  <div class="form-row">
    <div class="form-group col-4">
      <%= f.text_field :category_name, class: 'form-control' %>
    </div>
    <div class="col-2">
      <%= f.submit '新規登録',  class: 'btn btn-success btn-block' %>
    </div>
  </div>
<% end %>
