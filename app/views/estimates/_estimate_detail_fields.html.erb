
<tr class="nested-fields">
  <%= f.hidden_field :id %>
  <td>
  <%= f.collection_select :category_id, f.object.selectable_categories, :id, :category_name, {}, class: 'form-control' %>
  </td>
  <td>
  <%= f.text_field :item_name, class: 'form-control unit-price' %>
  </td>
  <td>
  <%= f.text_field :specification, class: 'form-control unit-price' %>
  </td>
  <td>
  <%= f.text_field :unit, class: 'form-control unit-price' %>
  </td>
  <td>
  <%= f.text_field :unit_price, class: 'form-control unit-price' %>
  </td>
  <td>
  <%= f.text_field :quantity, class: 'form-control quantity' %>
  </td>
  <td>
  <%= f.text_field :price, class: 'form-control subtotal', disabled: true %>
  </td>
  <td>
  <%= f.text_field :remark, class: 'form-control unit-price' %>
  </td>
  <td>
  <%= link_to_remove_association '削除', f, class: 'btn btn-default' %>
  </td>
</tr>