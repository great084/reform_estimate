<div class="section-title">
<h1>見積一覧</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>見積名称</th>
      <th>顧客名</th>
      <th>総額</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @estimates.each do |estimate| %>
    <tr>
      <td><%= estimate.customer_name %></td>
      <td><%= estimate.subject %></td>
      <td><%= estimate.grand_total %></td>
      <td>
        <%= link_to "詳細", estimate_path(estimate), class:"btn btn-primary" %>
        <%= link_to "編集", edit_estimate_path(estimate), class:"btn btn-primary" %>
        <%= link_to "削除", estimate_path(estimate), method: :delete, class:"btn btn-primary" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
